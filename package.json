{
  "name": "@samhwang/fullstack-netlify-template",
  "version": "2.0.0",
  "private": true,
  "description": "Fullstack Netlify Template",
  "license": "ISC",
  "msw": {
    "workerDirectory": "client/public"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "pnpm": "^8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "scripts": {
    "msw:init": "msw init client/public",
    "dev": "netlify dev",
    "prebuild": "rimraf dist",
    "build": "vite build --config client/vitest.config.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:preview": "vitest-preview",
    "lint": "biome check ./client/src/**/*.tsx ./backend/src/**/*.ts",
    "lint:fix": "biome check --apply ./client/src/**/*.tsx ./backend/src/**/*.ts",
    "lint:fix:unsafe": "biome check --apply-unsafe ./client/src/**/*.tsx ./backend/src/**/*.ts",
    "format": "biome format --write ./client/src/**/*.tsx ./backend/src/**/*.ts",
    "ci": "biome ci ./client/src/**/*.tsx ./backend/src/**/*.ts",
    "prisma:migrate": "prisma migrate dev --skip-generate",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@prisma/client": "^5.9.1",
    "@tanstack/react-query": "^4.36.1",
    "@trpc/client": "^10.45.1",
    "@trpc/react-query": "^10.45.1",
    "@trpc/server": "^10.45.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.12",
    "react-hook-form": "^7.50.1",
    "react-router-dom": "^6.22.0",
    "trpc-netlify-functions": "^0.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@tanstack/react-query-devtools": "^4.36.1",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "jsdom": "^24.0.0",
    "msw": "^2.1.7",
    "netlify-cli": "^17.16.1",
    "prisma": "^5.9.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vitest": "^1.2.2",
    "vitest-preview": "^0.0.1"
  }
}
