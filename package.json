{
  "name": "@samhwang/fullstack-netlify-template",
  "version": "2.0.0",
  "private": true,
  "description": "Fullstack Netlify Template",
  "license": "ISC",
  "msw": {
    "workerDirectory": "client/public"
  },
  "type": "module",
  "engines": {
    "node": "^20.0.0",
    "pnpm": "^8.0.0"
  },
  "packageManager": "pnpm@8.6.11",
  "scripts": {
    "msw:init": "msw init client/public",
    "dev": "netlify dev",
    "prebuild": "rimraf dist",
    "build": "vite build --config client/vitest.config.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:preview": "vitest-preview",
    "lint": "biome check ./client/src/**/*.tsx ./backend/src/**/*.ts",
    "lint:fix": "biome check --apply ./client/src/**/*.tsx ./backend/src/**/*.ts",
    "lint:fix:unsafe": "biome check --apply-unsafe ./client/src/**/*.tsx ./backend/src/**/*.ts",
    "format": "biome format --write ./client/src/**/*.tsx ./backend/src/**/*.ts",
    "ci": "biome ci ./client/src/**/*.tsx ./backend/src/**/*.ts",
    "prisma:migrate": "prisma migrate dev --skip-generate",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "@tanstack/react-query": "^4.32.6",
    "@trpc/client": "^10.37.1",
    "@trpc/react-query": "^10.37.1",
    "@trpc/server": "^10.37.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.10",
    "react-hook-form": "^7.45.4",
    "react-router-dom": "^6.14.2",
    "trpc-netlify-functions": "^0.4.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.0.0",
    "@tanstack/react-query-devtools": "^4.32.6",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^18.17.3",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@vitejs/plugin-react": "^4.0.4",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "@vitest/coverage-v8": "^0.34.1",
    "@vitest/ui": "^0.34.1",
    "jsdom": "^22.1.0",
    "msw": "^1.2.3",
    "netlify-cli": "^15.10.0",
    "prisma": "^5.1.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite": "^4.4.8",
    "vitest": "^0.34.1",
    "vitest-preview": "^0.0.1"
  }
}
